<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.adprojectmobile.activity.inventoryStore.RetrievalForm.RequisitionsInDisbursement">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/textview_retrival_collectionPoints_3"
        android:padding="20dp"
        android:textSize="20sp"
        android:background="@android:color/holo_purple"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:text="Requisitions"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:fitsSystemWindows="true"
        />

    <ListView
        android:layout_below="@id/textview_retrival_collectionPoints"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_retrival_requisitions" />
</LinearLayout>