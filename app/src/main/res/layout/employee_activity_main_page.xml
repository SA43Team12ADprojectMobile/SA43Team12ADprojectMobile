<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/employee_activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adprojectmobile.activity.department.EmployeeMainPage">

    <ImageView
        android:layout_height="150dp"
        app:srcCompat="@drawable/storeclerk"
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView_welcome_employee"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_employee_approve"
        android:text="Approve Requisition"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"
        android:textSize="20sp"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/btn_representative_confirm"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Confirm Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_representative_confirm"
        android:textSize="20sp"
        android:background="@android:color/holo_purple"
        android:textColor="@android:color/white"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn_employee_approve"
        android:layout_alignStart="@+id/btn_employee_approve" />

    <TextView
        android:text="Welcome   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:id="@+id/textView_welcome_employee"
        android:textColor="@android:color/black"
        android:layout_marginTop="13dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
