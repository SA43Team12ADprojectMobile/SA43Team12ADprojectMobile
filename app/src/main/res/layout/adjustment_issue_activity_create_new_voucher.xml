<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/retrieval_form_activity_confirm_retrieval"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.inventoryStore.RetrievalForm.ConfirmRetrieval">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="25sp"
        android:background="@android:color/holo_purple"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:text="New Voucher"
        android:textAllCaps="true"
        android:gravity="center"
        android:fitsSystemWindows="true"
        android:id="@+id/textView_title_issueAdjustment_newVoucher"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:layout_height="match_parent" >

            <TextView
                android:text="Voucher ID: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:paddingBottom="10dp"
                android:layout_weight="0"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/editText_create_new_voucherID"
                android:enabled="false"
                android:clickable="false"
                android:longClickable="false"
                android:textSize="25sp"
                android:text="A150010004"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:layout_height="match_parent" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:layout_height="match_parent">
            <TextView
                android:text="Issue Date: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:paddingBottom="10dp"
                android:layout_weight="0"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/editText_create_new_voucher_date"
                android:enabled="true"
                android:clickable="true"
                android:longClickable="true"
                android:textSize="25sp"
                android:text="2017-02-03"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">


        </TableRow>
    </TableLayout>

    <Button
        android:text="Create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btn_create_new_voucher"
        android:textSize="20sp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white" />


</LinearLayout>
