<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.inventoryStore.AdjustmentVoucher.IssueAdjustment.AddAdjustmentItem">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp"
        android:id="@+id/listview_select_add_item"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:layout_height="match_parent" >

            <TextView
                android:text="Input Item Code:"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:layout_weight="0"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/editText_issue_search_item_code"
                android:enabled="true"
                android:clickable="true"
                android:longClickable="true"
                android:maxLines="1" />

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0">


            <Button
                android:text="Search"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/btn_search_item"
                android:background="@android:color/holo_green_dark"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_width="20dp" />

            <Button
                android:text="Reset"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/btn_reset_item"
                android:background="@android:color/holo_red_dark"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>
