<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stock_clerk_activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adprojectmobile.activity.inventoryStore.StockClerkMainPage"
    android:background="@android:color/background_light">


    <TextView
        android:text="Welcome   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_welcome_storeclerk"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingLeft="220dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <ImageView
        android:layout_height="150dp"
        app:srcCompat="@drawable/storeclerk"
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/btn_clerk_issue_adjustment_voucher"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Issue Adjustment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clerk_issue_adjustment_voucher"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"
        android:layout_alignStart="@+id/btn_clerk_delivery_info"
        android:layout_alignEnd="@+id/btn_clerk_delivery_info" />

    <Button
        android:text="Acknowledge Disbursements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clerk_delivery_info"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"
        android:layout_below="@+id/btn_clerk_issue_adjustment_voucher"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/btn_clerk_retrieval_form"
        android:layout_alignEnd="@+id/btn_clerk_retrieval_form" />

    <Button
        android:text="Retrieval Form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clerk_retrieval_form"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"
        android:layout_below="@+id/btn_clerk_delivery_info"
        android:layout_alignStart="@+id/btn_clerk_view_adjustment_voucher"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/btn_clerk_view_adjustment_voucher" />

    <Button
        android:text="View Adjustment Voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clerk_view_adjustment_voucher"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_clerk_retrieval_form"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
