<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stock_clerk_activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adprojectmobile.activity.inventoryStore.StockClerkMainPage">

    <Button
        android:text="Issue Adjustment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="77dp"
        android:id="@+id/btn_clerk_issue_adjustment_voucher" />

    <Button
        android:text="Delivery Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_clerk_issue_adjustment_voucher"
        android:layout_alignStart="@+id/btn_clerk_issue_adjustment_voucher"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_clerk_delivery_info" />

    <Button
        android:text="Retrieval Form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btn_clerk_delivery_info"
        android:id="@+id/btn_clerk_retrieval_form" />

    <Button
        android:text="View Adjustment Voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_clerk_retrieval_form"
        android:layout_alignStart="@+id/btn_clerk_retrieval_form"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_clerk_view_adjustment_voucher" />
</RelativeLayout>
