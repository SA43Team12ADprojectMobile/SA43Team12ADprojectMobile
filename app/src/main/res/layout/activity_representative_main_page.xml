<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_representative_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adprojectmobile.activity.department.RepresentativeMainPage"
    android:background="@android:color/background_light">

    <TextView
        android:text="Welcome   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_welcome_departmentRepresentative"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingLeft="220dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/representative3"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView_welcome_departmentRepresentative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Confirm Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_representative_confirm"
        android:textSize="20sp"
        android:background="@android:color/holo_purple"
        android:textColor="@android:color/white"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

</RelativeLayout>
