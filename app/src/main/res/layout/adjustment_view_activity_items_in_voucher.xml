<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_collection_list"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.inventoryStore.AdjustmentVoucher.viewAdjustmentVoucher.ItemsInVoucher">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:textSize="25sp"
        android:background="@android:color/holo_purple"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:text="adjustment Items"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:fitsSystemWindows="true"
        android:id="@+id/textview_title_view_adjustmentItems" />

    <ListView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listview_adjustment_voucher_itemlist"
        android:background="@android:color/background_light"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" android:paddingBottom="15dip"

        style="@style/Widget.AppCompat.ListView.Menu"
        android:contextClickable="false"
        android:elevation="1dp" />

</LinearLayout>
