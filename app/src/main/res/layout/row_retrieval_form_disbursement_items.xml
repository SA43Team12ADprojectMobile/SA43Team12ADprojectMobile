<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/textView_retrieval_disbursement_item_name"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layoutDirection="rtl"
        android:layout_weight="1">

        <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layoutDirection="rtl"
           android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/textView_retrieval_disbursement_item_qty_needed"
                android:gravity="right"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:layoutDirection="rtl"
            android:gravity="right"
            android:textSize="20sp"
            android:text="QTY:"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom">

            <CheckBox
                android:text="Has Prepared finished?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_disbursement_items"
                android:layout_weight="1" />

            <Button
                android:text="SAVE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_save_disbursement_items"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>