<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_supervisor_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adprojectmobile.activity.inventoryStore.SupervisorMainPage"
    android:background="@android:color/white">


    <TextView
        android:text="Welcome   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_welcome_storesupervisor"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <Button
        android:text="Approve Adjustment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_supervisor_supervisor_authorize_adjustment"
        android:layout_marginTop="87dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"
        android:textSize="20sp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_height="200dp"
        app:srcCompat="@drawable/storesupervisor"
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView_welcome_storesupervisor"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
